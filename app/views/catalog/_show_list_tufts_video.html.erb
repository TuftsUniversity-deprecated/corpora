<% javascript_includes << "https://maps.googleapis.com/maps/api/js?sensor=false"  %>
<% stylesheet_links << "media_player/media_player.css" %>
<% stylesheet_links << "media_player/transcript.css" %>


<%
  metadata = Tufts::ModelMethods.get_metadata(@document_fedora)
  hasTranscript = !@document_fedora.datastreams["ARCHIVAL_XML"].dsLocation.nil?
%>


  <div class="row">
    <div class="span7">
      <%= render :partial => 'shared/header_elements', :locals => {:metadata => metadata} %>
    </div>  <!-- span12 -->
  </div>  <!-- row -->

  <hr>

  <div class="row">
    <div class="span5">
      <% 
        models = @document_fedora.relationships(:has_model)
      %>

      <%= raw Tufts::MediaPlayerMethods.show_audio_player(params[:id], hasTranscript) if models.include? 'info:fedora/afmodel:TuftsAudioText'%><br>
      <%= raw Tufts::MediaPlayerMethods.show_video_player(params[:id], hasTranscript) if models.include? 'info:fedora/afmodel:TuftsVideo'%><br>
      <br>
      <% if hasTranscript %>
        <div class="participant_div">
          <b>Interview Participants</b><br>
          <%= raw Tufts::MediaPlayerMethods.show_participants(@document_fedora) %>
        </div>  <!-- participant_div -->
      <% end %>
    </div>  <!-- span6 -->

    <div class="span7">
    <% if hasTranscript %>
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li <%= raw params[:tab] == "1" || params[:tab].nil? ? " class=\"active\"" : "" %>><a id="tab1" href="/catalog/<%= params[:id] %>?tab=1">Information</a></li>
          <li <%= raw params[:tab] == "2" ? " class=\"active\"" : "" %>><a id="tab2" href="/catalog/<%= params[:id] %>?tab=2">Transcript</a></li>
          <li <%= raw params[:tab] == "3" ? " class=\"active\"" : "" %>><a id="tab3" href="/catalog/<%= params[:id] %>?tab=3">People</a></li>
          <li <%= raw params[:tab] == "4" ? " class=\"active\"" : "" %>><a id="tab4" href="/catalog/<%= params[:id] %>?tab=4">Places</a></li>
          <li <%= raw params[:tab] == "5" ? " class=\"active\"" : "" %>><a id="tab5" href="/catalog/<%= params[:id] %>?tab=5">Concepts</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane<%= params[:tab] == "1" || params[:tab].nil?  ? " active" : "" %>" id="1">
            <%= render :partial => 'shared/metadata_pane', :locals => {:metadata => metadata} %>
          </div>
          <!-- tab-pane 1 -->

          <div class="tab-pane<%= params[:tab] == "2" ? " active" : "" %>" id="2">
            <a href="/catalog/transcriptonly/<%= params[:id] %>" class="pull-right">
              <h6>view transcript only <i class="icon-share"></i></h6></a>
            <br>

            <div class="transcript_box">
              <%= raw Tufts::MediaPlayerMethods.show_transcript(@document_fedora, true) %>
            </div>
            <!-- transcript_box -->
          </div>
          <!-- tab-pane 2 -->
          <div class="tab-pane<%= params[:tab] == "3" ? " active" : "" %>" id="3">
            <div id='peopleDiv'>
              &nbsp;   3
            </div>
            <!-- add javascript function to init people data -->
            <script>
            <%= raw AnnotationHelper.show_people(@people)%>
            </script>
          </div>
          <!-- tab-pane 3 -->
          <div class="tab-pane<%= params[:tab] == "4" ? " active" : "" %>" id="4">
            <div id='placesMetaDiv'>
              <div id="mapParent">
                <div id="mapCanvas" style="width: 450px; height: 540px">
                </div>
                <a href="javascript:showLocationIndex()">Show Location Index</a>
              </div>
              <div id='placesParentDiv'>
                <div id='placesDiv'>
                  &nbsp;         4,
                </div>
                <a href="javascript:showMapCanvas()">Show Map</a>
              </div>
            </div>
            <!-- add javascript function to init places data -->
            <script>
                <%= raw AnnotationHelper.show_places(@places)%>
            </script>
          </div>
          <!-- tab-pane 4 -->
          <div class="tab-pane<%= params[:tab] == "5" ? " active" : "" %>" id="5">
            <div id='conceptsDiv'>
              &nbsp; 5
            </div>
            <!-- add javascript function to init concept data -->
            <script>
                <%= raw AnnotationHelper.show_concepts(@concepts)%>
            </script>
          </div>
          <!-- tab-pane 5 -->

        </div>
        <!-- tab-content -->
      </div>
          <!-- tabbable -->
      <% else %>
      <%= render :partial => 'shared/metadata_pane', :locals => {:metadata => metadata} %>
    <% end %>
    </div>  <!-- span6 -->
  </div>  <!-- row --> 
